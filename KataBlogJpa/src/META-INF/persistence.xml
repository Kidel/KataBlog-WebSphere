<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="KataBlog">
		<jta-data-source>jdbc/KataBlogDB</jta-data-source>
		<class>it.bonofiglio.kata.model.Tag</class>
		<class>it.bonofiglio.kata.model.Post</class>
		<class>it.bonofiglio.kata.model.Editor</class>
		<properties>
			<property name="openjpa.jdbc.Schema" value="APP"/>
		</properties>
	</persistence-unit>
</persistence>
